{
  "name": "express-standard-schema-validation",
  "version": "1.0.0",
  "description": "validate express application inputs and parameters using Standard Schema V1 (supports Joi, Zod, ArkType, and Valibot)",
  "main": "express-standard-schema-validation.js",
  "scripts": {
    "build-ts": "tsc --build example/typescript/tsconfig.json",
    "unit": "vitest run express-standard-schema-validation.test.js",
    "acceptance": "vitest run acceptance/",
    "test": "npm run ts-test && vitest run && npm run build-ts",
    "test:watch": "vitest",
    "test:unit": "vitest run express-standard-schema-validation.test.js --watch",
    "test:acceptance": "vitest run acceptance/ --watch",
    "ts-test": "tsc express-standard-schema-validation.d.ts --target es5 --module commonjs --noEmit",
    "coverage": "vitest run --coverage",
    "example": "node --watch example/javascript/server.js",
    "example-ts": "npm run build-ts && node example/typescript/server.js",
    "format": "prettier --write \"**/*.{js,ts,json}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,ts,json}\" --ignore-path .gitignore"
  },
  "typings": "express-standard-schema-validation.d.ts",
  "files": [
    "express-standard-schema-validation.js",
    "express-standard-schema-validation.d.ts"
  ],
  "keywords": [
    "standard-schema",
    "joi",
    "zod",
    "arktype",
    "valibot",
    "express",
    "validation",
    "middleware",
    "typescript",
    "tsc"
  ],
  "author": "Evan Shortiss",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "~4.0.39",
    "@types/express-formidable": "~1.0.4",
    "@types/node": "^25.0.3",
    "@types/qs": "~6.9.3",
    "@vitest/coverage-v8": "^4.0.16",
    "arktype": "^2.0.0-rc.8",
    "chance": "^1.1.12",
    "eslint": "^9.39.2",
    "express": "~4.22.1",
    "express-formidable": "~1.0.0",
    "joi": "~18.0.2",
    "lodash": "~4.17.15",
    "prettier": "~3.7.4",
    "qs": "~6.9.4",
    "typescript": "^5.7.2",
    "valibot": "^1.2.0",
    "vitest": "^4.0.16",
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "joi": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "arktype": {
      "optional": true
    },
    "valibot": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jderr-work/express-standard-schema-validation.git"
  },
  "bugs": {
    "url": "https://github.com/jderr-work/express-standard-schema-validation/issues"
  },
  "homepage": "https://github.com/jderr-work/express-standard-schema-validation#readme"
}
